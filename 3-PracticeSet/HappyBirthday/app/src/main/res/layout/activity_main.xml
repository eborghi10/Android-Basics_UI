<!--
Drawing to code in 3 steps:
    1) Select the views (TextView, ImageView, EditText, Button)
    2) Position the views (Relative or Linear layout, alignParent, ...)
    3) Style the views
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/photo"
        android:src="@drawable/android_party" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy birthday, Fulano!"
        android:textStyle="bold"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:id="@+id/topText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Emiliano"
        android:textStyle="bold"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/bottomText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"/>

</RelativeLayout>
